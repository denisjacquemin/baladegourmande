<h1>New bg</h1>

<% form_for(@bg) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :reservations_open %><br />
    <%= f.check_box :reservations_open %>
  </p>
  <p>
    <%= f.label :reservations_not_open_text %><br />
    <%= f.text_area :reservations_not_open_text %>
  </p>
  <p>
    <%= f.label :reservations_closed_text %><br />
    <%= f.text_area :reservations_closed_text %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', bgs_path %>
