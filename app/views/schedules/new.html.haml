#block-lists.block
  .content
    %h2.title
      Nouvel horaire
    .inner
      - form_for(@schedule) do |f|
        .flash-messages.error
          = f.error_messages
        .group
          = f.label :label
          = f.text_field :label, :class => 'text'
        .group
          = f.label :active
          = f.check_box :active
        .group.navform 
          = f.submit "Creer"
          = link_to 'Annuler', schedules_path
